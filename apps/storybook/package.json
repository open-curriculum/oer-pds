{
  "name": "dss-storybook",
  "version": "0.2.0",
  "author": "Evgeny Khoroshilov (https://github.com/XOP)",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "biome lint",
    "format": "biome format",
    "format:fix": "pnpm format --write",
    "dev": "storybook dev -p 6006",
    "build": "storybook build -o dist",
    "serve": "http-server ./dist --port 3030",
    "test:vrt": "npx playwright test visualRegression",
    "test:vrt:update": "npx playwright test --update-snapshots",
    "test:a11y": "npx playwright test accessibility",
    "test": "pnpm test:a11y && pnpm test:vrt"
  },
  "dependencies": {
    "@ds-starter/fonts": "workspace:*",
    "@ds-starter/tokens": "workspace:*",
    "@ds-starter/ui": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@ds-starter/tsconfig": "workspace:*",
    "@playwright/test": "^1.43.0",
    "@storybook/addon-a11y": "^8.2.4",
    "@storybook/addon-essentials": "^8.2.4",
    "@storybook/addon-links": "^8.2.4",
    "@storybook/addon-themes": "^8.2.4",
    "@storybook/blocks": "^8.2.4",
    "@storybook/builder-vite": "^8.2.4",
    "@storybook/react": "^8.2.4",
    "@storybook/react-vite": "^8.2.4",
    "@types/node": "^20",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@vanilla-extract/css": "^1.15.3",
    "@vanilla-extract/vite-plugin": "4.0.10",
    "dedent": "^1.5.1",
    "http-server": "^14.1.1",
    "storybook": "^8.2.4",
    "typescript": "^5.5.4",
    "vite": "^5.3.4"
  }
}
